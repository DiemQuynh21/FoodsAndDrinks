<% provide(:title, t("edit_user.title")) %>
<h1 class="text-center edit-custom"><%= t "edit_user.header" %></h1>
<div class="row edit-center">
  <div class="image-custom">
    <div class="about-avatar">
      <img src="https://bootdey.com/img/Content/avatar/avatar7.png" title="" alt="">
    </div>
  </div>
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user do |f| %>
      <%= render "shared/error_messages", object: f.object %>
      <div class="form-group edit-custom">
        <%= f.label t "user.name" %>
        <%= f.text_field :name, class: "form-control form-edit-custom"%>
      </div>
      <div class="form-group edit-custom">
        <%= f.label t "user.email" %>
        <%= f.email_field :email, class: "form-control form-edit-custom", disabled: true %>
      </div>
      <div class="form-group edit-custom">
        <%= f.label t "user.phone" %>
        <%= f.telephone_field :phone_number, class: "form-control form-edit-custom"%>
      </div>
      <div class="form-group edit-custom">
        <%= f.label t "user.address" %>
        <%= f.text_field :address, class: "form-control form-edit-custom"%>
      </div>
      <div class="form-group edit-custom">
        <%= f.submit t("edit_user.save"), class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
